<!DOCTYPE html>
<html>
  <head>
    <title>MiniBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GtvfC0w1UY0w5a9zAAQoMYg65lGzWzYF5fjzT3oxfXkxzNUZohISbAoA4FQ3uTgk"
      crossorigin="anonymous"
    >

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Flash messages -->
    <div class="container mt-3">
      <% if notice %>
        <div class="alert alert-info"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>
    </div>

    <%= yield %>

    <!-- Bootstrap JS Bundle CDN -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-sWwr/Ta0vQPrBhIsIOfraZhEqySih8aCOA3bJSAtdHlscUlM+Xp7wD9J5Xx5/Kn7"
      crossorigin="anonymous"
    ></script>
  </body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to "MiniBlog", root_path, class: "navbar-brand" %>

    <div class="d-flex">
      <% if user_signed_in? %>
        <span class="navbar-text me-3">
          Signed in as <strong><%= current_user.email %></strong>
        </span>
        <%= link_to "New Post", new_post_path, class: "btn btn-outline-primary me-2" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success me-2" %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary" %>
      <% end %>
    </div>
  </div>
</nav>
</html>
