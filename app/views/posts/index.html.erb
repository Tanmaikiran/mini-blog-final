<h1 class="mb-4">All Posts</h1>

<% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
      <p class="card-text"><%= truncate(post.content, length: 150) %></p>
      <p class="card-text">
        <small class="text-muted">By <%= post.user.email %></small>
      </p>
    </div>
  </div>
<% end %>
